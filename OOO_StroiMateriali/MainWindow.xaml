<Window x:Class="OOO_StroiMateriali.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOO_StroiMateriali"
        mc:Ignorable="d"
        Title="Авторизация" Height="550" Width="400" MinHeight="550" MinWidth="400" Icon="Assets/icon.ico" FontFamily="Comic Sans MS" FontSize="22">
    <Grid>
        <StackPanel>            
            <Image Height="100" Source="/Assets/logo.png" />
            <Label Margin="10" HorizontalAlignment="Center">
                Логин
            </Label>
            <TextBox x:Name="loginElem" Width="200"></TextBox>

            <Label Margin="10" HorizontalAlignment="Center">Пароль</Label>
            <PasswordBox x:Name="passwordElem" Width="200"></PasswordBox>

            <Button Margin="10" Width="140" Background="#FFA8D697" Click="Button_Click">
                Войти
            </Button>

            <Button Margin="10" Width="110" Background="#FFA8D697" Click="Button_Click_1">
                Гость
            </Button>

                
           
            
            
        </StackPanel>
        
    </Grid>
</Window>
